<Page
    x:Class="pz19.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pz19"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF2B2B2B">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:ConnectionId='2' x:Name="displayText"
                 Grid.Row="0"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Text=""
                 FontSize="48"
                 Foreground="White"
                 Background="#FF1E1E1E"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Padding="20"
                 IsReadOnly="True"
                 TextAlignment="Right"/>

        <Button x:ConnectionId='3' Content="C" Grid.Row="1" Grid.Column="0" FontSize="32" Background="#FF404040" Foreground="White"                   />
        <Button x:ConnectionId='4' Content="√" Grid.Row="1" Grid.Column="1" FontSize="32" Background="#FF404040" Foreground="White"                        Tag="√"/>
        <Button x:ConnectionId='5' Content="^" Grid.Row="1" Grid.Column="2" FontSize="32" Background="#FF404040" Foreground="White"                        Tag="^"/>
        <Button x:ConnectionId='6' Content="/" Grid.Row="1" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White"                        Tag="/"/>

        <Button x:ConnectionId='7' Content="7" Grid.Row="2" Grid.Column="0" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="7"/>
        <Button x:ConnectionId='8' Content="8" Grid.Row="2" Grid.Column="1" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="8"/>
        <Button x:ConnectionId='9' Content="9" Grid.Row="2" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="9"/>
        <Button x:ConnectionId='10' Content="*" Grid.Row="2" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White"                        Tag="*"/>

        <Button x:ConnectionId='11' Content="4" Grid.Row="3" Grid.Column="0" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="4"/>
        <Button x:ConnectionId='12' Content="5" Grid.Row="3" Grid.Column="1" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="5"/>
        <Button x:ConnectionId='13' Content="6" Grid.Row="3" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="6"/>
        <Button x:ConnectionId='14' Content="-" Grid.Row="3" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White"                        Tag="-"/>

        <Button x:ConnectionId='15' Content="1" Grid.Row="4" Grid.Column="0" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="1"/>
        <Button x:ConnectionId='16' Content="2" Grid.Row="4" Grid.Column="1" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="2"/>
        <Button x:ConnectionId='17' Content="3" Grid.Row="4" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="3"/>
        <Button x:ConnectionId='18' Content="+" Grid.Row="4" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White"                        Tag="+"/>

        <Button x:ConnectionId='19' Content="0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="0"/>
        <Button x:ConnectionId='20' Content="." Grid.Row="5" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White"                     Tag="."/>
        <Button x:ConnectionId='21' Content="=" Grid.Row="5" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White"                    />
    </Grid>
</Page>

