<Page
    x:Class="pz19.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pz19"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF2B2B2B">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="displayText"
                 Grid.Row="0"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Text=""
                 FontSize="48"
                 Foreground="White"
                 Background="#FF1E1E1E"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Padding="20"
                 IsReadOnly="True"
                 TextAlignment="Right"/>

        <Button Content="C" Grid.Row="1" Grid.Column="0" FontSize="32" Background="#FF404040" Foreground="White" Click="ClearClick"/>
        <Button Content="√" Grid.Row="1" Grid.Column="1" FontSize="32" Background="#FF404040" Foreground="White" Click="OperationClick" Tag="√"/>
        <Button Content="^" Grid.Row="1" Grid.Column="2" FontSize="32" Background="#FF404040" Foreground="White" Click="OperationClick" Tag="^"/>
        <Button Content="/" Grid.Row="1" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White" Click="OperationClick" Tag="/"/>

        <Button Content="7" Grid.Row="2" Grid.Column="0" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="7"/>
        <Button Content="8" Grid.Row="2" Grid.Column="1" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="8"/>
        <Button Content="9" Grid.Row="2" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="9"/>
        <Button Content="*" Grid.Row="2" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White" Click="OperationClick" Tag="*"/>

        <Button Content="4" Grid.Row="3" Grid.Column="0" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="4"/>
        <Button Content="5" Grid.Row="3" Grid.Column="1" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="5"/>
        <Button Content="6" Grid.Row="3" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="6"/>
        <Button Content="-" Grid.Row="3" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White" Click="OperationClick" Tag="-"/>

        <Button Content="1" Grid.Row="4" Grid.Column="0" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="1"/>
        <Button Content="2" Grid.Row="4" Grid.Column="1" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="2"/>
        <Button Content="3" Grid.Row="4" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="3"/>
        <Button Content="+" Grid.Row="4" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White" Click="OperationClick" Tag="+"/>

        <Button Content="0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="0"/>
        <Button Content="." Grid.Row="5" Grid.Column="2" FontSize="32" Background="#FF333333" Foreground="White" Click="NumberClick" Tag="."/>
        <Button Content="=" Grid.Row="5" Grid.Column="3" FontSize="32" Background="#FFFF9500" Foreground="White" Click="EqualsClick"/>
    </Grid>
</Page>
