<Page
    x:Class="pz26.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:pz26"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="12">

            <TextBlock Text="Главная страница"
                       FontSize="34"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <Button x:ConnectionId='2' Content="Открыть страницу 1"
                                         
                    Width="250"/>

            <Button x:ConnectionId='3' Content="Открыть страницу 2"
                                         
                    Width="250"/>

            <Button x:ConnectionId='4' Content="Открыть страницу 3"
                                         
                    Width="250"/>
        </StackPanel>
    </Grid>
</Page>

