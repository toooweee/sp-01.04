<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#22000000"/>

    <Style x:Key="MainGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="16"/>
    </Style>

    <Style x:Key="TopPanelGridStyle" TargetType="Grid">
        <Setter Property="ColumnSpacing" Value="10"/>
    </Style>

    <Style x:Key="UrlTextBoxStyle" TargetType="TextBox">
        <Setter Property="PlaceholderText" Value="Введите URL (например https://google.com)"/>
    </Style>

    <Style x:Key="GoButtonStyle" TargetType="Button">
        <Setter Property="Content" Value="Go"/>
    </Style>

    <Style x:Key="StarButtonStyle" TargetType="Button">
        <Setter Property="Content" Value="⭐"/>
        <Setter Property="MinWidth" Value="44"/>
    </Style>

    <Style x:Key="BookmarksButtonStyle" TargetType="DropDownButton">
        <Setter Property="Content" Value="Закладки"/>
    </Style>

    <Style x:Key="WebViewStyle" TargetType="WebView">
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>
</ResourceDictionary>
